<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link rel="dns-prefetch" href="//unpkg.com" />
  <link rel="stylesheet" href="profile.css">
  <link href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@800&family=Tourney:ital,wght@1,400&family=Londrina+Solid:wght@900&family=Rock+Salt&display=swap"
  rel="stylesheet">    
  <link rel="dns-prefetch" href="//cdn.jsdelivr.net" />
  <link rel="stylesheet" href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css">
  <link href="https://unpkg.com/tailwindcss@1.3.4/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.js" defer></script>

  <link rel="shortcut icon" 
  type="image/x-icon" 
  href="favicon.ico"/>
</head>

<body>


  <!-- extra style of calendar  -->

  <div>
    <style>
      .antialiased {
        background-color: rgb(0, 0, 0);
        width: 110%;
        font-size: 1rem;
      }

      *,
      ::after,
      ::before {
        box-sizing: border-box;
        border-width: 0;
        border-style: solid;
        border-color: #969696;
      }

      div .antialiased .container {
        height: 800px;
        width: 100%;
        transform: scale(0.8);
        padding-top: 0;
        margin-left: -3%;
      }
    </style>
   
<!-- structure of calendar  -->

<div style="display:none" class="dataDiv">
<%= JSON.stringify(calendar) %>
</div>

    <div class="background antialiased sans-serif bg-gray-400 h-screen pt-6">
      <div x-data="app()" x-init="[initDate(), getNoOfDays()]" x-cloak>
        <div class="container mx-auto px-4 py-2 md:py-24">

          <div class="bg-white rounded-lg shadow overflow-hidden">

            <div class="flex items-center mt-5 justify-between px-6">
              <div>
                <span x-text="MONTH_NAMES[month]" class="text-6xl font-londrina font-bold text-gray-800"></span>
                <span x-text="year" class="ml-1 text-5xl font-londrina text-gray-600 font-normal"></span>
              </div>
              <div class="border rounded-lg px-1" style="padding-top: 2px;">
                <button type="button"
                  class="leading-none rounded-lg transition ease-in-out duration-100 inline-flex cursor-pointer hover:bg-gray-200 p-1 items-center"
                  :class="{'cursor-not-allowed opacity-25': month == 0 }" :disabled="month == 0 ? true : false"
                  @click="month--; getNoOfDays()">
                  <svg class="h-6 w-6 text-gray-500 inline-flex leading-none" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                  </svg>
                </button>
                <div class="border-r inline-flex h-6"></div>
                <button type="button"
                  class="leading-none rounded-lg transition ease-in-out duration-100 inline-flex items-center cursor-pointer hover:bg-gray-200 p-1"
                  :class="{'cursor-not-allowed opacity-25': month == 11 }" :disabled="month == 11 ? true : false"
                  @click="month++; getNoOfDays()">
                  <svg class="h-6 w-6 text-gray-500 inline-flex leading-none" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </button>
              </div>
            </div>

            <div class="-mx-1 -mb-1">
              <div class="flex flex-wrap" style="margin-bottom: -40px;">
                <template x-for="(day, index) in DAYS" :key="index">
                  <div style="width: 14.26%" class="px-2 py-2">
                    <div x-text="day" class=" float-right pr-2 text-yellow-700 text-xl uppercase tracking-wide font-bold text-center"></div>
                  </div>
                </template>
              </div>

              <div class="flex flex-wrap border-t border-l">
                <template x-for="blankday in blankdays">
                  <div style="width: 14.28%; height: 120px" class="text-center border-r border-b px-4 pt-2"></div>
                </template>
                <template x-for="(date, dateIndex) in no_of_days" :key="dateIndex">
                  <div style="width: 14.28%; height: 120px" class="px-4 cal-londrina text-3xl pt-2 border-r border-b relative calendarDate">
                    <div @click="showEventModal(date)" x-text="date"
                      class="inline-flex w-6 h-6 items-center justify-center cursor-pointer text-center leading-none rounded-full transition ease-in-out duration-100"
                      :class="{'bg-yellow-700 p-6 text-white': isToday(date) == true, 'text-gray-700 hover:bg-blue-200': isToday(date) == false }">
                    </div>
                    <div style="height: 80px;" class="overflow-y-auto mt-1">

                      <template
                        x-for="event in events.filter(e => new Date(e.event_date).toDateString() ===  new Date(year, month, date).toDateString() )">
                        <div class="px-2 py-1 rounded-xl mt-1 overflow-hidden border" :class="{
												'border-blue-200 text-blue-800 bg-blue-100': event.event_theme === 'blue',
												'border-red-200 text-red-800 bg-red-100': event.event_theme === 'red',
												'border-yellow-200 text-yellow-800 bg-yellow-100': event.event_theme === 'yellow',
												'border-green-200 text-green-800 bg-green-100': event.event_theme === 'green',
												'border-purple-200 text-purple-800 bg-purple-100': event.event_theme === 'purple'
											}">
                          <p x-text="event.event_title" class="text-sm truncate leading-tight"></p>
                        </div>
                      </template>
                    </div>
                  </div>
                </template>
              </div>
            </div>
          </div>
        </div>
        <!-- end of calendar structure -->

      <script src="/main.js"></script>

</body>

</html>